generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  meals    Meal[]

  @@map("users")
}

model Meal {
  id          String   @id @default(uuid())
  name        String
  description String   @unique
  inORoutDiet String
  date        DateTime @default(now())
  authorId    String   @map("author_id")
  author      User     @relation(fields: [authorId], references: [id])

  @@map("meals")
}
